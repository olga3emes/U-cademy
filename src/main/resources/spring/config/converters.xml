<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd		
		http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-4.0.xsd		
	">

	<util:list id="converters">
		<!-- 
			Add your own converters using entries of the following form: 
			<bean class="converters.Class1ToClass2" /> 
		-->
		<!-- sth to String -->
		<bean class="converters.AcademyToStringConverter" />
		<bean class="converters.ActorToStringConverter" />
		<bean class="converters.AdministratorToStringConverter" />
		<bean class="converters.AssessmentToStringConverter" />
		<bean class="converters.AuthorityToStringConverter" />
		<bean class="converters.FileToStringConverter" />
		<bean class="converters.FolderToStringConverter" />
		<bean class="converters.GroupToStringConverter" />
		<bean class="converters.InscriptionToStringConverter" />
		<bean class="converters.InvoiceToStringConverter" />
		<bean class="converters.NotificationToStringConverter" />
		<bean class="converters.OwnerToStringConverter" />
		<bean class="converters.PaymentToStringConverter" />
		<bean class="converters.ProfessorToStringConverter" />
		<bean class="converters.StudentToStringConverter" />
		<bean class="converters.SubjectToStringConverter" />
		<bean class="converters.SubjectClassToStringConverter" />
		
		<!-- String to sth -->
		<bean class="converters.StringToAcademyConverter" />
		<bean class="converters.StringToActorConverter" />
		<bean class="converters.StringToAdministratorConverter" />
		<bean class="converters.StringToAssessmentConverter" />
		<bean class="converters.StringToAuthorityConverter" />
		<bean class="converters.StringToFileConverter" />
		<bean class="converters.StringToFolderConverter" />
		<bean class="converters.StringToGroupConverter" />
		<bean class="converters.StringToInscriptionConverter" />
		<bean class="converters.StringToInvoiceConverter" />
		<bean class="converters.StringToNotificationConverter" />
		<bean class="converters.StringToOwnerConverter" />
		<bean class="converters.StringToPaymentConverter" />
		<bean class="converters.StringToProfessorConverter" />
		<bean class="converters.StringToStudentConverter" />
		<bean class="converters.StringToSubjectConverter" />
		<bean class="converters.StringToSubjectClassConverter" />
		
	</util:list>
	
</beans>